<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
        BackgroundColor="#f7f7f7"
        xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LearningAlgo.Test1">
    <RelativeLayout HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    x:Name="MainLayout">
        <StackLayout x:Name="SendItems" 
                     Orientation="Vertical"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand">
        </StackLayout>

        <StackLayout x:Name="UnderMenu"
                     BackgroundColor="#23455678"
                     Orientation="Vertical"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand">
            <Button 
                TextColor="#12a7eb"
                WidthRequest="500"
                Text="SideP"
                Clicked="SidePanel"
            />
        </StackLayout>
        <StackLayout x:Name="SidePane"
                     BackgroundColor="#12a7eb">
            <ScrollView>
<Grid>
  <Grid.RowDefinitions>
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
    <RowDefinition Height="50" />
<RowDefinition Height="50" />
    <RowDefinition Height="50" />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*" />
  </Grid.ColumnDefinitions>

                      <Image Grid.Row="0" 
                        Grid.Column="0"
                        x:Name="Sq"
                        Source="Side_Sq.png"
                        BackgroundColor="Fuchsia"
                    />
                    <Image Grid.Row="1" 
                        Grid.Column="0"
                        x:Name="Hi"
                        Source="Side_Hi.png"
                        BackgroundColor="Green"/>
                    <Image Grid.Row="2" 
                        Grid.Column="0"
                        x:Name="He"
                        Source="Side_He.png"
                        BackgroundColor="Maroon"/>
                    <Image Grid.Row="3" 
                        Grid.Column="0"
                        x:Name="Du"
                        Source="Side_Du.png"
                    />

                    <Image Grid.Row="4" 
                        Grid.Column="0"
                        Source="Side_Dd.png"
                    />

                    <Image Grid.Row="5" 
                        Grid.Column="0"
                        Source="Side_Dd.png"
                    />

                    <Image Grid.Row="6"
                        Grid.Column="0"
                        Source="Side_Dd.png"
                    />
                    <Image Grid.Row="7" 
                        Grid.Column="0"
                        x:Name="Dd"
                        Source="Side_Dd.png"
                    />



                    
</Grid>




                    

            </ScrollView>
        </StackLayout>
    </RelativeLayout>
</ContentPage>
